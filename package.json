{
  "name": "alexa-cctv",
  "version": "1.0.0",
  "description": "Using hls.js to recreate a stream based on a docker volume that's updated by a Raspberry Pi",
  "main": "server.js",
  "scripts": {
    "test": "npm run test",
    "build-css": "node-sass ./main.scss ./public/main.css",
    "watch-css": "nodemon -e scss --watch main.scss -x \"npm run build-css\"",
    "start": "npm run build-js && npm run build-css && node server.js",
    "build-js": "browserify scripts.js -o ./public/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scottdj92/Alexa-CCTV.git"
  },
  "keywords": [
    "npm",
    "raspeberry",
    "pi",
    "js",
    "javascript"
  ],
  "author": "Scott Jones",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scottdj92/Alexa-CCTV/issues"
  },
  "homepage": "https://github.com/scottdj92/Alexa-CCTV#readme",
  "devDependencies": {
    "browserify": "13.1.1",
    "node-sass": "3.10.1",
    "nodemon": "1.10.2",
    "serialport": "4.0.3"
  },
  "dependencies": {
    "express": "4.13.2"
  }
}
